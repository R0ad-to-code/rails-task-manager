<div class="m-4 p-3 container mx-auto">
<h1>My tasks:</h1>

<ul>
<% @tasks.each do |task| %>
<li><input type="checkbox" onclick="return false;" <%= "checked" if task.completed? %> name="checkbox_<%= task.title %>"> <%= link_to task.title, task_path(task) %> - <%= link_to "X", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
<%end%>
</ul>
<hr>
<%= link_to "Add a new task", new_task_path %>
</div>
