<div class="m-4 p-3 container mx-auto">
<h1>New Task</h1>

<%= form_with model: @task do |f|%>
  <%= f.label :title %>
  <%= f.text_field :title%>
  <%= f.label :details %>
  <%= f.text_field :details%>
  <%= f.submit %>
<% end %>

<div class="text-end">
<%= link_to "Back to task", tasks_path %>
</div>
</div>
